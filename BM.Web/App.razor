<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData"
                                DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <BM.Web.Pages.ErrorPage ErrorStatusCode="401" ErorrTitle="Không được phép truy cập!"
                                            ErrorDescription="Bạn có thể cần phải đăng nhập với tư cách quản trị viên." />
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <BM.Web.Pages.ErrorPage />
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

