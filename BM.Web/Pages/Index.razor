@page "/"
@page "/trang-chu"
@inherits IndexController;


<TelerikScheduler Data="@Appointments" @bind-Date="@StartDate" Height="calc(100vh - 125px)" @bind-View="@CurrView">
    <SchedulerViews>
        <SchedulerMonthView></SchedulerMonthView>
        <SchedulerDayView StartTime="@( new DateTime(2023, 12, 1, 7, 0, 0) )"></SchedulerDayView>
    </SchedulerViews>
</TelerikScheduler>


@code{
    public DateTime StartDate { get; set; } = new DateTime(2023, 12, 01);
    public SchedulerView CurrView { get; set; } = SchedulerView.Month;
    IEnumerable<object> Appointments = new List<object>();
}