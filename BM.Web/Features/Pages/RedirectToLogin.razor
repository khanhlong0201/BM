@inject NavigationManager _nav;
@code {
    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                var path = _nav.ToBaseRelativePath(_nav.Uri);
                _nav.NavigateTo($"/login?returnUrl={path}");
            }
            catch(Exception){}
        
        }
    }
}
